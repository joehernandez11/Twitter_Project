using System;

namespace Twitter_Project
{
	class User
	{
		private string username;      //here I included the essential information needed when making an account

		public User(string username)
		{
			this.username = username;
		}
			
		public string GetUsername()
		{
			return username;
		}

		public void SetUsername(string NewUsername)      //name does not get a setter because people don't usually change names.
		{
			username = NewUsername;
		}
			
	}
}

